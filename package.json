{
  "name": "awesome-copilot",
  "version": "1.0.0",
  "description": "Enhance your GitHub Copilot experience with community-contributed instructions, prompts, and chat modes",
  "main": "./eng/update-readme.js",
  "bin": {
    "awesome-copilot-mcp": "eng/mcp-server/dist/index.js"
  },
  "private": true,
  "scripts": {
    "start": "npm run build",
    "build": "node ./eng/update-readme.mjs",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "contributors:check": "all-contributors check",
    "collection:validate": "node ./eng/validate-collections.mjs",
    "collection:create": "node ./eng/create-collection.mjs",
    "build:mcp": "cd eng/mcp-server && npm run build",
    "start:mcp": "cd eng/mcp-server && npm start",
    "dev:mcp": "cd eng/mcp-server && npx tsx src/index.ts",
    "test:mcp": "cd eng/mcp-server && npm test",
    "test:mcp:coverage": "cd eng/mcp-server && npm run test:coverage",
    "test:mcp:watch": "cd eng/mcp-server && npm run test:watch",
    "publish:mcp:beta": "cd eng/mcp-server && npm run prepublishOnly && npm run publish:beta"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/github/awesome-copilot.git"
  },
  "keywords": [
    "github",
    "copilot",
    "ai",
    "prompts",
    "instructions"
  ],
  "author": "GitHub",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "all-contributors-cli": "^6.26.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "vfile": "^6.0.3",
    "vfile-matter": "^5.0.1"
  }
}
